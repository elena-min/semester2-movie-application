@page
@model WebApp.Pages.RegisterModel
@{
}


<main>
    <div id="welcome-container-form">
        <div id="main-container">
            <h1>Welcome to Cinematic</h1>
            <div class="form_container">
                <form method="post">
                    <label asp-for="Firstname">First name:</label>
                    <span asp-validation-for="Firstname"></span><br />
                    <input asp-for="Firstname" placeholder="Your first name..."><br />

                    <label asp-for="Lastname">Last name:</label>
                    <span asp-validation-for="Lastname"></span><br />
                    <input asp-for="Lastname" placeholder="Your last name..."><br />

                    <label asp-for="Username">Username:</label>
                    <span asp-validation-for="Username"></span><br />
                    <input asp-for="Username" placeholder="Your username..."><br />

                    <label asp-for="Email">Email:</label>
                    <span asp-validation-for="Email"></span><br />
                    <input asp-for="Email" placeholder="Your email..."><br />

                    <label asp-for="Password">Password:</label>
                    <span asp-validation-for="Password"></span><br />
                    <input asp-for="Password" placeholder="Your password..."><br /><br />

                    <div class="register_gender">
                        <label for="gender">Gender:</label>
                        <select id="gender" name="gender">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div><br /><br />


                    <div class="button_container">
                        <input type="submit" value="Create Account">
                    </div>
                </form>
                <div class="alert-danger"><p>@TempData["Message"]</p></div>
            </div>
        </div>

        <div class="main-picture">
            <img src="/images/mainPoster.jpg" alt="Poster">
        </div>
    </div>

</main>
