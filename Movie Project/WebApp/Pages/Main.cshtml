@page
@using DAL;
@using LogicLayer.Classes;
@using LogicLayer.Controllers;
@using LogicLayer.Interfaces;
@model WebApp.Pages.MainModel
@{
    Layout = "_LayoutMain";
    @functions {
        static IMediaItemDAL iMediaItemDAL = new MediaItemDAL();
        static MediaItemController mediaController = new MediaItemController(iMediaItemDAL);
    }
}

<main>
    <div id="welcome-container">
        <div id="main-container">
            <h1>Welcome to Cinematic</h1>
        </div>
        <div class="main-picture">
            <img src="/images/mainPoster.jpg" alt="Poster">
        </div>
    </div>

    <div id="movies-container">
        <div class="movies">
            @foreach(MediaItem m in Model.Movies.Take(4))
            {
                Movie movie = m as Movie;

                <div class="movie">
                    <div class="image-grid">
                        <a asp-page="./MovieInfo" asp-route-id="@movie.GetId()" target="_blank">
                            <img src="data:image;base64,@mediaController.GetMediaItemImageByID(@movie.GetId())" alt="Serie cover">
                        </a>
                    </div>
                    <div class="movie-text p-1">
                        <h3><b><a asp-page="./MovieInfo" asp-route-id="@movie.GetId()">@movie.Title</a></b></h3>
                        <h6><i>@movie.ReleaseDate.ToString("MM-yyyy")</i></h6>
                    </div>
                </div>
                 } 
            
            } 

