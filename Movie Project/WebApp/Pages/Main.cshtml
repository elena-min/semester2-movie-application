@page
@using DAL;
@using LogicLayer.Classes;
@using LogicLayer.Controllers;
@using LogicLayer.Interfaces;
@model WebApp.Pages.MainModel
@{
    @functions {
        static IMediaItemDAL iMediaItemDAL = new MediaItemDAL();
        static MediaItemController mediaController = new MediaItemController(iMediaItemDAL);
    }
}

<main>
    <div id="welcome-container">
        <div id="main-container">
            <h1>Welcome to Cinematic</h1>
        </div>
        <div class="main-picture">
            <img src="/images/mainPoster.jpg" alt="Poster">
        </div>
    </div>

    <div id="movies-container">
        <div class="movies">
            @foreach(MediaItem m in mediaController.GetAll())
            {
                List<MediaItem> movies = new List<MediaItem>();
                if(m is Movie)
                {
                    movies.Add(m);
                }
                foreach (MediaItem movie in movies.Take(4))
                {
                    <div class="movie">
                        <div class="image-grid">
                            <a asp-page="./MovieInfo" asp-route-id="@movie.GetId()" target="_blank">
                                <img src="data:image;base64,@mediaController.GetMediaItemImageByID(movie.GetId())" alt="Movie cover" style="padding:10px">
                            </a>
                        </div>
                        <div class="movie-text p-1">
                            <h3><b><a asp-page="./MovieInfo" asp-route-id="@movie.GetId()">@movie.Title</a></b></h3>
                            <h6><i>@movie.ReleaseDate.ToString("MM-yyyy")</i></h6>
                        </div>
                    </div>
                }

                

            }
        </div>
        <div class="shows">
            @foreach (MediaItem s in mediaController.GetAll())
            {
                List<MediaItem> series = new List<MediaItem>();
                if (s is Serie)
                {
                    series.Add(s);
                }
                foreach (MediaItem serie in series.Take(4))
                {
                    <div class="movie">
                        <div class="image-grid">
                            <a asp-page="./MovieInfo" asp-route-id="@serie.GetId()" target="_blank">
                                <img src="data:image;base64,@mediaController.GetMediaItemImageByID(serie.GetId())" alt="Serie cover" style="padding:10px">
                            </a>
                        </div>
                        <div class="movie-text p-1">
                            <h3><b><a asp-page="./MovieInfo" asp-route-id="@serie.GetId()">@serie.Title</a></b></h3>
                            <h6><i>@serie.ReleaseDate.ToString("MM-yyyy")</i></h6>
                            <h6>Seasons: @((Serie)serie).Seasons</h6>
                        </div>
                    </div>
                }



            }
        </div>


    </div>


</main>
