        <div class="shows">
            @foreach (MediaItem s in Model.Shows.Take(4))
            {
                Serie serie = s as Serie;

                <div class="movie">
                    <div class="image-grid">
                        <a asp-page="./SerieInfo" asp-route-id="@serie.GetId()" target="_blank">
                            <img src="data:image;base64,@mediaController.GetMediaItemImageByID(@serie.GetId())" alt="Serie cover">
                        </a>
                    </div>
                    <div class="movie-text p-1">
                        <h3><b><a asp-page="./SerieInfo" asp-route-id="@serie.GetId()">@serie.Title</a></b></h3>
                        <h6><i>@serie.ReleaseDate.ToString("MM-yyyy")</i></h6>
                        <h6>Seasons: @((Serie)serie).Seasons</h6>
                    </div>
                </div>
            }

            }
        
</div>


