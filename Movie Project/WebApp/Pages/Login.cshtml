@page
@model WebApp.Pages.LoginModel
@{
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<main>
    <div id="welcome-container-form">
        <div id="main-container">
            <h1>Welcome to Cinematic</h1>
            <div class="form_container">
                <div class="alert-danger"><p>@TempData["Message"]</p></div>
                
                <form method="post">
                    <label asp-for="User.Username">Username:</label>
                    <span asp-validation-for="User.Username"></span><br />
                    <input asp-for="User.Username" placeholder="Your username..."><br />
                    
                    <label asp-for="User.Password">Password:</label>
                    <span asp-validation-for="User.Password"></span><br />
                    <input asp-for="User.Password" type="password" placeholder="Your password..."><br /><br />

                    <label>
                        <input asp-for="RememberMe" type="checkbox"> Remember Me
                    </label>

                    <div class="button_container">
                        
                        <input type="submit" value="Login">
                    </div>
                </form>
            </div>
        </div>

        <div class="main-picture">
            <img src="/images/mainPoster.jpg" alt="Poster">
        </div>
    </div>

</main>
